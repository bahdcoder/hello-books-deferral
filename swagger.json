{
  "swagger": "2.0",
  "info": {
    "title": "Hello Books",
    "description": "A system that allows efficient, cost-effective management of our library.",
    "version": "1.0.0"
  },
  "basePath": "/api/v1",
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["auth"],
        "summary": "Add a new user account",
        "operationId": "addUser",
        "consumes": ["application/json", "application/x-www-form-urlencoded"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User object that needs to be added to the app",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfull User Registration"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/books/add": {
      "post": {
        "tags": ["book"],
        "summary": "User can add books",
        "operationId": "addBooks",
        "consumes": ["application/json", "application/x-www-form-urlencoded"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Add a book to the library",
            "required": true,
            "schema": {
              "$ref": "#/definitions/addBook"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Book Added Successfully"
          }
        }
      }
    },
    "definitions": {
      "NewUser": {
        "type": "object",
        "required": [
          "firstName",
          "lastName",
          "email",
          "password",
          "password_confirmation"
        ],
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "password_confirmation": {
            "type": "string"
          }
        },
        "xml": {
          "name": "NewUser"
        }
      },
      "addBook": {
        "type": "object",
        "required": [
          "title",
          "coverType",
          "description",
          "isbn",
          "publisher",
          "year"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "coverType": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "isbn": {
            "type": "string"
          },
          "publisher": {
            "type": "string"
          },
          "year": {
            "type": "string"
          }
        },
        "xml": {
          "name": "NewUser"
        }
      }
    }
  }
}
