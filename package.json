{
    "name": "hello-books",
    "version": "1.0.0",
    "description": "A system that allows efficient, cost-effective management of our library.",
    "main": "index.js",
    "scripts": {
        "lint": "eslint **/*.js",
        "lint:fix": "prettier-eslint **/**/*.{js,json} --write",
        "prettier": "prettier **/**/*.{js,json} --write",
        "test": "jest --forceExit",
        "dev": "nodemon --exec babel-node server/index",
        "migrate": "knex migrate:latest && knex seed:run",
        "make:migration": "knex migrate:make",
        "migrate:rollback": "knex migrate:rollback",
        "start": "node server/index",
        "heroku-postbuild": "npm run migrate",
        "coverage": "jest --forceExit --coverage && cat ./coverage/lcov.info | coveralls"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "npm run lint:fix",
            "npm run prettier",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bahdcoder/hello-books-deferral.git"
    },
    "keywords": [
        "books",
        "library"
    ],
    "author": "obi chinedu frank <frankieetchy@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/bahdcoder/hello-books-deferral/issues"
    },
    "homepage": "https://github.com/bahdcoder/hello-books-deferral#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "consola": "2.6.0",
        "dotenv": "^7.0.0",
        "express": "^4.16.4",
        "express-jsend": "^0.1.0",
        "friendly-mail": "^1.0.0",
        "husky": "^2.2.0",
        "indicative": "^5.0.8",
        "jsonwebtoken": "^8.5.1",
        "knex": "^0.16.5",
        "lint-staged": "^8.1.5",
        "nodemon": "^1.18.10",
        "objection": "^1.6.8",
        "pg": "^7.10.0",
        "prettier-eslint": "^8.8.2",
        "prettier-eslint-cli": "^4.7.1",
        "swagger-ui-express": "^4.0.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.4",
        "@babel/node": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/preset-env": "^7.4.4",
        "babel-plugin-module-resolver": "^3.2.0",
        "coveralls": "^3.0.3",
        "cross-env": "^5.2.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.17.2",
        "faker": "^4.1.0",
        "jest": "^24.8.0",
        "nodemon": "^1.18.10",
        "supertest": "^4.0.2"
    }
}
