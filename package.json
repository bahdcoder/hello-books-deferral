{
  "name": "hello-books",
  "version": "1.0.0",
  "description": "A system that allows efficient, cost-effective management of our library.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint **/*.js",
    "lint:fix": "prettier-eslint **/*.js --write",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout=10000",
    "dev": "nodemon server/index",
    "migrate": "knex migrate:latest",
    "make:migration": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback",
    "start": "node server/index",
    "heroku-postbuild": "npm run migrate",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bahdcoder/hello-books-deferral.git"
  },
  "keywords": [
    "books",
    "library"
  ],
  "author": "obi chinedu frank <frankieetchy@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahdcoder/hello-books-deferral/issues"
  },
  "homepage": "https://github.com/bahdcoder/hello-books-deferral#readme",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "consola": "2.6.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-jsend": "^0.1.0",
    "husky": "^2.2.0",
    "indicative": "^5.0.8",
    "knex": "^0.16.5",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.4",
    "morgan": "1.9.1",
    "nodemon": "^1.18.10",
    "objection": "^1.6.8",
    "pg": "^7.10.0",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "coveralls": "^3.0.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.10",
    "nyc": "^14.0.0"
  }
}
